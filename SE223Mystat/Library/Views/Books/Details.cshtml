@model Library.Models.BookWithManyAuthors

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Book</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Book.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Book.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model =>model.Book.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model =>model.Book.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model =>model.Book.Quantity)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model =>model.Book.Quantity)
        </dd>
    </dl>
</div>

<div class="mt-5">
    @foreach (var item in Model.Authors)
    {
        <p>@item.FirstName @item.LastName</p>
    }
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
